<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acorn.BoardMapper">
 
   <select id="totalRecord" resultType="int">
      select count(*)
       from board
   </select>


   <select id="boardSortList" parameterType="hashmap" resultType="BoardDTO">
     select num,author,title,
             to_char(writeday,'YYYY/MM/dd') writeday , readcnt
       from board 
       <if test="sort=='desc'">
       order by readcnt  desc
       </if>
       <if test="sort=='asc'">
       order by readcnt
       </if>
   </select> 

   <select id="boardSearch" 
      parameterType="hashmap" resultType="BoardDTO">
     select num,author,title,
             to_char(writeday,'YYYY/MM/dd') writeday , readcnt
     from board
     <if test="searchName == 'title'">
       where title LIKE  '%'||#{searchValue}||'%'
     </if>
     <if test="searchName == 'author'">
       where author LIKE '%'||#{searchValue}||'%'
     </if>
     
     order by num desc
   </select>


   <update id="boardUpdate" parameterType="hashmap">
      update board
      set title=#{b}, author=#{c} , content=#{d}
      where num = #{a}
   </update>

   <delete id="boardDelete" parameterType="int">
   	  delete from board
   	  where num = #{num}
   </delete>

   <update id="boardReadcnt" parameterType="int">
      update board
      set readcnt = readcnt + 1
      where num = #{num}
   </update>

   <select id="boardRetrieve" 
   resultType="BoardDTO" parameterType="int">
     select num,author,title, content,
             to_char(writeday,'YYYY/MM/dd') writeday ,
              readcnt
     from board
     where num = #{num}
   </select>
   
   <insert id="boardWrite" parameterType="BoardDTO">
    insert into board ( num,title,author,content)
    values ( board_seq.nextval, #{title},#{author},#{content})
   </insert>
   <select id="boardList" resultType="BoardDTO">
     select num,author,title,
             to_char(writeday,'YYYY/MM/dd') writeday , readcnt
     from board
     order by num desc
   </select>
</mapper>